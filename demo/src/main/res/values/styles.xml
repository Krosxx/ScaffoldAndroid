<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarSize">40dp</item>
        <!-- Toolbar 标题字体样式 不可加android:  -->
        <item name="titleTextStyle">@style/TitleStyle</item>
        <!-- Toolbar 导航图标样式  -->
        <item name="toolbarNavigationButtonStyle">@style/NavStyle</item>
    </style>

    <!--  DarkMode 样式  -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_text</item>
        <item name="colorPrimaryDark">@color/primary_text</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarSize">40dp</item>
        <item name="titleTextStyle">@style/TitleStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/NavStyle</item>
    </style>

    <!-- Toolbar 标题文字样式 -->
    <style name="TitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16dp</item>
    </style>

    <!--  导航栏图标  -->
    <style name="NavStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

</resources>
